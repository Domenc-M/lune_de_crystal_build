DirectoryIndex index.html

# Force non-www
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.lune-de-crystal\.com$ [NC]
RewriteRule ^(.*)$ https://lune-de-crystal.com/$1 [R=301,L]

# SPA fallback
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Donâ€™t rewrite real files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Redirect everything else to index.html
  RewriteRule . /index.html [L]
</IfModule>